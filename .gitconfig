[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dt = difftool
    mt = mergetool
    cp = cherry-pick
    fp = fetch --all --prune
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

[core]
    autocrlf = false
    eol = lf
[color]
    ui = true
[user]
    name = Jordan Taekema
    email = <email>
[push]
    default = upstream
[diff]
    tool = BeyondCompare3
[difftool]
    prompt = false
    keepBackup = false
[difftool "BeyondCompare3"]
    trustExitCode = true
    cmd =  \"C:/Program Files (x86)/Beyond Compare 3/BCompare.exe\" "$LOCAL" "$REMOTE"
[merge]
    tool = BeyondCompare3
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "BeyondCompare3"]
    trustExitCode = true
    cmd = \"C:/Program Files (x86)/Beyond Compare 3/BCompare.exe\" \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
[gui]
    commitmsgwidth = 72
    warndetachedcommit = true
    gcwarning = false
